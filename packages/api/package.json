{
  "name": "@pa/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node --expose-gc --max-old-space-size=384 dist/index.js",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed-blog": "tsx prisma/seed-blog.ts",
    "db:seed-kpi": "tsx prisma/seed-kpi.ts",
    "db:deploy": "prisma migrate deploy",
    "crawl:local": "tsx scripts/local-crawl.ts"
  },
  "dependencies": {
    "@pa/shared": "workspace:*",
    "@prisma/client": "5.22.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "cheerio": "^1.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "playwright": "^1.57.0",
    "prisma": "5.22.0",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  }
}
